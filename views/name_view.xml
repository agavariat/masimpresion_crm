<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="view_partner_simple_form_inheritted" model="ir.ui.view">
            <field name="name">res.partner.simplified.form.inheritted</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]" position="after">
                    <group>
                        <group>
                            <field name="tamemp" style="width:40%%" />
                            <field name="linea" widget="many2many_tags" style="width:40%%" />
                            <field name="com" style="width:40%%" />
                        </group>
                        <group>
                            <field name="sec"/>
                            <field name="client"/>
                        </group>
                    </group>    
                </xpath>
            </field>
       </record>
       
    </data>
</odoo>
